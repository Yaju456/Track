@{
}
<style>
    .mybtn{
        text-decoration:none;
        color:black;
    }
    .mybtn:hover{
        cursor:pointer;
        text-decoration:none;
        color:black;
    }
</style>
<partial name="_SearchBar" />
<from>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="From">From:</label>
            <input type="date" id="From" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label for="TOo">To: </label>
            <input type="date" id="TOo" class="form-control" />
        </div>
        
        <div class="form-group col-md-1">
            <button class="btn btn-primary" onclick="dateSearch()" style="position:absolute; bottom:0;"><i class="bi bi-search"></i></button>
        </div>
    </div>
    
</from>
<table class="table" id="BillTable">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Bill no
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Total
            </th>
            <th style="text-align: center;" class="hideit">
                <a class="mybtn" id="mybtn">Payment Process</a>
            </th>
            <th class="hideit">
                View
            </th>   
            <th class="hideit">
                <a class="btn btn-primary" asp-action="CreateBill">Add</a>
            </th>
        </tr>
    </thead>
    <tbody id="t-body">

    </tbody>    
</table>

<button class="btn btn-primary" onclick="printAll()">Print</button>


@section Scripts{
    <script src="~/js/Autocomplete.js"></script>
    <script src="~/js/printThis.js"></script>
    <script src="~/js/addbill.js"></script>
}