@model BillClass


<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Service</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <from id="service">
                    <div class="form-group">
                        <lable for="NService">Service: </lable>
                        <input type="text" class="form-control" id="NService"/>
                    </div>
                    <div class="form-group">
                        <label for="rate">Rate</label>
                        <input type="number" class="form-control" id="rate" />
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" class="form-control" id="quantity" />
                    </div>
                    <button onclick=onClickme() class="btn btn-primary">Submit</button>
                </from>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<form id="Client">

    <div class="form-row">
        <input hidden asp-for="@Model.Id" id="Bill_id" />
        <div class="form-group col-md-4">
            <label for="ClientName">Customer Name</label>
            <input disabled asp-for="@Model.Customer.Name" id="ClientName" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label for="ClientNumber">Customer Number</label>
            <input disabled asp-for="@Model.Customer.PhoneNumber" class="form-control" />
        </div>

        <div class="form-group col-md-4">
            <label for="Bill_no">Bill No</label>
            <input disabled type="text" class="form-control"  id="Bill_no" asp-for="@Model.Billno" placeholder="Bill No" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="Description">Date</label>
            <input type="date" class="form-control" asp-for="@Model.Date" id="BDate" placeholder="Bill Date" />
        </div>

        <input asp-for="@Model.total" hidden id="sub-total" />
        <div class="form-group col-md-4 d-flex justify-content-center align-items-end">

            <button class="btn btn-primary" type="submit"><i class="bi bi-file-bar-graph-fill"></i>
                @if (Model.Id == 0)
                {
                    <text>Generate Report</text>
                }
                else
                {
                    <text>Update</text>
                }
            </button>
        </div>
        <div class="form-group col-md-4 d-flex justify-content-center align-items-end">

            <a class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong"><i class="bi bi-file-bar-graph-fill"></i> Add Service</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Rate
            </th>
            <th>
                Quantity
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody id="t-body">
    </tbody>
</table>
@section Scripts
{
    <script src="~/js/chalanitobill.js"></script>
}